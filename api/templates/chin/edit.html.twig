{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% if node.organization is defined and node.organization is not empty %}
    {% set organization = commonground_resource(node.organization) %}
{% endif %}

{% block style %}
    <style>

        @media (max-width: 555px) {
            body {
                position: fixed;
                width: 100%;
            }
        }

        .checkinFont {
            color: #01689b;
        }

        .background {
            background-color: lightgrey;
        }

        {% if organization.style.css is defined and organization.style.css is not empty %}
        {{ organization.style.css|raw }}
        {% endif %}
    </style>
{% endblock %}

{% block container %}
    <div class="container background" style="background-size: 300px; width: 100%; max-width: 100%;">
        <form action="{{ path('app_chin_edit') }}" method="post">
            <div class="row">
                <div class="col-md-12 col-sm-12" style="padding: 0;">
                    <div class="" style="height: calc(100vh - 38px); text-align: center; display: flex; flex-direction: column; justify-content: space-evenly">
                        {% if organization.style.favicon.base64 is defined and organization.style.favicon.base64 is not empty %}
                        <div class="row">
                            <div class="col-xs-12">
                                <img style="width: 30rem;" src="{{ organization.style.favicon.base64 }}" alt="">
                            </div>
                        </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-xs-1 col-sm-2 col-md-3 col-lg-4"></div>
                            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4 " style="margin-bottom: 15px;">
                                <div style="width: 100%; background-color: white; border-radius: 20px; padding-top: 20px; padding-bottom: 5px;">
                                    <div class="input" style="margin-top: 5px; margin-bottom: 5px; padding: 0 10px;">
                                        <input style="height: 35px" type="text" id="givenName" name="givenName" placeholder="{{ 'first name'|trans|capitalize }}"
                                               class="noFocus input__control input__control--text" required
                                               {% if person.givenName is defined and person.givenName is not empty %}value="{{ person.givenName }}"{% endif %}>
                                    </div>
                                    <div class="input" style="margin-top: 5px; margin-bottom: 5px; padding: 0 10px;">
                                        <input style="height: 35px" type="text" id="familyName" name="familyName" placeholder="{{ 'last name'|trans|capitalize }}"
                                               class="noFocus input__control input__control--text" required
                                               {% if person.familyName is defined and person.familyName is not empty %}value="{{ person.familyName }}"{% endif %}>
                                    </div>
                                    <div class="input" style="margin-top: 5px; margin-bottom: 5px; padding: 0 10px;">
                                        <input style="height: 35px" type="text" id="additionalName" name="email" placeholder="Email"
                                               class="noFocus input__control input__control--text"
                                               {% if person.emails[0].email is defined and person.emails[0].email is not empty %}value="{{ person.emails[0].email }}"{% endif %}>
                                    </div>
                                    <div class="input" style="margin-top: 5px; margin-bottom: 5px; padding: 0 10px;">
                                        <input style="height: 35px" type="text" id="additionalName" name="telephone" placeholder="{{ 'telephone'|trans|capitalize }}"
                                               class="noFocus input__control input__control--text"
                                               {% if person.telephones[0].telephone is defined and person.telephones[0].telephone is not empty %}value="{{ person.telephones[0].telephone }}"{% endif %}>
                                    </div>
                                    <div style="margin-top: 10px; margin-bottom: 10px; padding: 0 10px;">
                                        <button style="padding:0; border: none; background-color: #01689B; color: white; border-radius: 20px;" class="btn btn--block"><h2 style="margin-top: 4px;">{{ 'edit'|trans|capitalize }}</h2></button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div><!-- /.container -->
{% endblock %}
