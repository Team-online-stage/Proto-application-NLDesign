                    <div class="input">
                        <label class="input__label" for="name">Challenge naam:</label>
                        <input type="text" class="input__control input__control--text" id="name" name="name" required>
                    </div>

                    <div class="input">
                        <label class="input__label" for="description">Wat houdt de challenge in:</label>
