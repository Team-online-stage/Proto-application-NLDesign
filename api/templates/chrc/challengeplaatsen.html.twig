{% block container %}
    <style>
        main {
            background-color: white;
        }
    </style>
    <div class="container">
        <section class="row">
            <div class="col-sm-8">
                <a class="backlink"
                   href="/{{ application.defaultConfiguration.configuration.bedrijvenPage }}">Terug</a>
                <header class="content__header">
                    <h1 style="font-family: 'Lobster', cursive">Challenge plaatsen</h1>
                </header>
            </div>
        </section>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
